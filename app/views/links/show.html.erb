<div class="text-xs flex justify-between items-center">
  <%= link_to "← Back to all links", root_path, class:"no-underline text-xs px-3 py-2 rounded" %>
  <%= tag.div pluralize(@link.views_count, "view") %>
  <%= link_to "Edit", edit_link_path(@link), class:"px-2 py-1.5 rounded bg-gray-100 no-underline" %>
</div>

<h1 class="mt-4">
  <%= @link.url %>
</h1>
<%= @link.description %>


<%= link_to view_path(@link), target: :_blank, data: { turbo: false }, class:"px-2 py-1.5 bg-gray-100 no-underline mb-8" do %>
  <%= image_tag "https://www.google.com/s2/favicons?domain=#{@link.domain}", class:"inline-block" %>
  <%= @link.url %>
  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="inline-block w-5 h-5">
    <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 0 0 3 8.25v10.5A2.25 2.25 0 0 0 5.25 21h10.5A2.25 2.25 0 0 0 18 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
  </svg>
<% end %>

<%= line_chart @link.views.group_by_day(:created_at, range: 2.weeks.ago..Time.now, expand_range: true).count %>